<script type="text/x-template" id="edit-delete-template">
  <transition name="modal">
    <div class="modal-mask">
      <div class="modal-wrapper">
        <div class="modal-container">
          <button class="close" @click="$emit('close')">&times;</button>
          <form @submit.prevent>
            <div class="modal-header">
                <h3>Update Event</h3>
            </div>

            <div class="modal-body">
              <label>Date: </label>
              <input type="date" :min="minDate" :max="maxDate" v-model="date" required>
              <label>Start at: </label>
              <input type="time" v-model="startTime" required>
              <label>End at: </label>
              <input type="time" v-model="endTime" required>
            </div>

            <div class="modal-footer">
              <button type="button" class="btn btn-danger" type="submit" @click="deleteEvent">Delete</button>
              <button type="button" class="btn btn-success" type="submit" @click="editEvent">Save</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </transition>
</script>