<script type="text/x-template" id="edit-delete-template">
  <transition name="modal">
    <div class="modal-mask">
      <div class="modal-wrapper">
        <div class="modal-container">
          <button class="close" @click="$emit('close')">&times;</button>
          <form @submit.prevent>
            <div class="modal-header">
                <h3>Update Event</h3>
            </div>
            <div class="modal-body">
              <slot name="body">
                <label>Date: </label>
                <input type="date" v-model="date" required>
                <label>Start at: </label>
                <input type="time" v-model="startTime" required>
                <label>End at: </label>
                <input type="time" v-model="endTime" required>
              </slot>
            </div>

            <div class="modal-footer">
              <slot name="footer">
                <button @click="deleteEvent" type="button" class="btn btn-danger" type="submit">Delete</button>
                <button type="button" class="btn btn-success" type="submit" @click="editEvent">Save</button>
              </slot>
            </div>
          </form>
        </div>
      </div>
    </div>
  </transition>
</script>