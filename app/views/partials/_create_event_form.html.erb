<script type="text/x-template" id="create-template">
  <transition name="modal">
    <div class="modal-mask">
      <div class="modal-wrapper">
        <div class="modal-container">
          <button class="close" @click="$emit('close')">&times;</button>
          <form @submit.prevent="saveEvent">
            <div class="modal-header">
                <h3>Create Event</h3>
            </div>
            <div class="modal-body">
              <label for="date">Date: </label>
              <input type="date" :min="minDate" :max="maxDate" v-model="date" required>
              <label for="start-time">Start at: </label>
              <input type="time" v-model="startTime" required>
              <label for="end-time">End at: </label>
              <input type="time" v-model="endTime" required>
            </div>

            <div class="modal-footer">
              <button type="button" class="btn btn-success" type="submit">Create</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </transition>
</script>
